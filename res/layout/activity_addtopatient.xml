<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_addtopatient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.youhanamikhaiel.stethoman.addtopatient"
    android:background="#3a82cf">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Add to patient"
            android:layout_width="match_parent"
            android:id="@+id/textView"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textColor="#e7e8e3"
            android:layout_marginBottom="40dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText5"
            android:background="#e7e8e3"
            android:textSize="24sp"
            android:hint="Enter the patient's ID..."
            android:layout_marginBottom="17dp"
            android:paddingLeft="5dp" />

        <Button
            android:text="Upload photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonupload"
            android:textColor="#e7e8e3"
            android:background="#e14938"
            android:layout_marginBottom="17dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText7"
            android:background="#e7e8e3"
            android:layout_weight="1"
            android:hint="Comment"
            android:gravity="top|center_vertical"
            android:paddingTop="10dp"
            android:paddingLeft="5dp" />

        <Button
            android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:background="#e14938"
            android:layout_marginTop="17dp"
            android:textColor="#e7e8e3" />
    </LinearLayout>
</RelativeLayout>
