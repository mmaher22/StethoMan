<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_resetpassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.youhanamikhaiel.stethoman.resetpassword"
    android:background="#3a82cf">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Reset Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="25sp"
            android:layout_marginBottom="10dp"
            android:textColor="#e7e8e3" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/userid"
            android:background="#e7e8e3"
            android:paddingTop="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:paddingBottom="7dp"
            android:hint="ID"
            android:paddingLeft="5dp" />
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:id="@+id/radioGroup1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        <RadioButton
            android:text="Patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton1"
            android:layout_weight="1"
            android:textColor="#e7e8e3"
            android:soundEffectsEnabled="true"
            android:buttonTint="#e7e8e3"
            android:paddingLeft="2dp"
            android:layout_marginLeft="16dp"
            android:contextClickable="true"
            android:cursorVisible="true"
            android:keepScreenOn="false"
            android:isScrollContainer="false"
            android:freezesText="false"
            android:checked="true" />

        <RadioButton
            android:text="Doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:layout_weight="1"
            android:checked="false"
            android:buttonTint="#e7e8e3"
            android:textColor="#e7e8e3"
            android:paddingLeft="2dp"
            android:layout_marginLeft="16dp"
            android:contextClickable="true" />
        </RadioGroup>

        <Button
            android:text="Reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button11"
            android:backgroundTint="#e14938"
            android:layout_marginRight="5dp"
            android:textColor="#e7e8e3"
            android:onClick="resetpass"/>

    </LinearLayout>

</RelativeLayout>
