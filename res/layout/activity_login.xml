<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.youhanamikhaiel.stethoman.Login"
    android:background="#3a82cf">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            app:srcCompat="@drawable/logo11"
            android:id="@+id/imageView"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitCenter"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:paddingBottom="20dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#e7e8e3"
                android:hint="ID"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="4dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_weight="1"
                android:background="#e7e8e3"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="4dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:paddingLeft="15dp"
                android:hint="Password"
                android:fontFamily="sans-serif"
                android:soundEffectsEnabled="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:id="@+id/radioGroup1">
                    <RadioButton
                    android:text="Manager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton1"
                    android:layout_weight="1"
                    android:textColor="#e7e8e3"
                    android:soundEffectsEnabled="true"
                    app:buttonTint="#e7e8e3"
                    android:paddingLeft="2dp"
                    android:layout_marginLeft="16dp"
                    android:contextClickable="true"
                    android:cursorVisible="true"
                    android:checked="false"
                    android:keepScreenOn="false"
                    android:isScrollContainer="false"
                    android:freezesText="false" />

                <RadioButton
                    android:text="Doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton2"
                    android:layout_weight="1"
                    android:checked="false"
                    app:buttonTint="#e7e8e3"
                    android:textColor="#e7e8e3"
                    android:paddingLeft="2dp"
                    android:layout_marginLeft="16dp"
                    android:contextClickable="true" />

                <RadioButton
                    android:text="Patient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton3"
                    android:layout_weight="1"
                    app:buttonTint="#e7e8e3"
                    android:textColor="#e7e8e3"
                    android:paddingLeft="2dp"
                    android:layout_marginLeft="16dp"
                    android:contextClickable="true" />
            </RadioGroup>

            </LinearLayout>

            <Button
                android:text="Sign in"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/buttonone"
                android:layout_weight="1"
                android:layout_marginLeft="110dp"
                android:layout_marginRight="110dp"
                android:background="#e14938"
                android:textColor="#e7e8e3"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="Forgot Password?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:gravity="right"
                    android:textColor="#e7e8e3"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:cursorVisible="false"
                    android:soundEffectsEnabled="true"
                    android:onClick="text_msg"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
