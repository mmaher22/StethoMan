<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_deleteuser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.youhanamikhaiel.stethoman.deleteuser"
    android:background="#3a82cf">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="Delete user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textSize="24sp"
                android:textColor="#e7e8e3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText18"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:paddingLeft="5dp"
                android:background="#e7e8e3"
                android:hint="Enter user ID...." />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:text="Patient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton10"
                    android:layout_weight="1"
                    android:buttonTint="#e7e8e3"
                    android:textColor="#e7e8e3"
                    android:paddingLeft="2dp"
                    android:layout_marginLeft="16dp"
                    android:contextClickable="true"
                    android:checked="true" />
                <RadioButton
                    android:text="Doctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton11"
                    android:layout_weight="1"
                    android:checked="false"
                    android:buttonTint="#e7e8e3"
                    android:textColor="#e7e8e3"
                    android:paddingLeft="2dp"
                    android:layout_marginLeft="16dp"
                    android:contextClickable="true" />
            </RadioGroup>
            <Button
                android:text="Select User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button9"
                android:backgroundTint="#e14938"
                android:textColor="#e7e8e3"
                android:onClick="Ondelsel"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText9"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:paddingLeft="5dp"
                android:background="#e7e8e3"
                android:hint="User Name: ...." />

            <Button
                android:text="Deleter user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button15"
                android:backgroundTint="#e14938"
                android:textColor="#e7e8e3"
                android:onClick="Ondeldel"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
