<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_searchforpatient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.youhanamikhaiel.stethoman.searchforpatient"
    android:background="#3a82cf">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Search patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            android:textColor="#e7e8e3"
            android:textSize="24sp"
            android:layout_marginBottom="30dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/patientID"
            android:background="#e7e8e3"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:paddingBottom="7dp"
            android:paddingLeft="5dp"
            android:paddingTop="7dp"
            android:hint="Enter patient's ID...." />

        <TextView
            android:text="View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView24"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="#e7e8e3" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <RadioButton
                android:text="Lab investigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton6"
                android:layout_weight="1"
                app:buttonTint="#e7e8e3"
                android:textColor="#e7e8e3" />

            <RadioButton
                android:text="Medical Report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton7"
                android:layout_weight="1"
                android:buttonTint="#e7e8e3"
                android:textColor="#e7e8e3"
                android:checked="true" />
        </RadioGroup>

        <Button
            android:text="Show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button12"
            android:textColor="#e7e8e3"
            android:backgroundTint="#e14938"
            android:onClick="showpat"/>
    </LinearLayout>
</RelativeLayout>
