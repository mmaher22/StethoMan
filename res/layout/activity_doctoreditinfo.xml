<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_doctoreditinfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.youhanamikhaiel.stethoman.doctoreditinfo"
    android:background="#3a82cf">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:text="Edit info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="25sp"
        android:layout_marginBottom="10dp"
        android:textColor="#e7e8e3" />

        <TextView
            android:text="Doctor's name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doctorname"
            android:textColor="#e7e8e3"
            android:textSize="20sp"
            android:paddingLeft="7dp" />

        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/doctoremail"
        android:background="#e7e8e3"
        android:paddingTop="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:paddingBottom="7dp"
        android:hint="Email"
        android:paddingLeft="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/doctormobile"
        android:background="#e7e8e3"
        android:paddingTop="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:paddingBottom="7dp"
        android:hint="Mobile number"
        android:paddingLeft="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/doctorpassword"
        android:background="#e7e8e3"
        android:paddingTop="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:paddingBottom="7dp"
        android:hint="Password"
        android:paddingLeft="5dp" />

        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/awards"
        android:paddingBottom="5dp"
        android:background="#e7e8e3"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:layout_marginBottom="10dp"
        android:hint="Education" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Upload photo(Max 60KB)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:layout_weight="1"
            android:background="#e14938"
            android:layout_marginRight="5dp"
            android:textColor="#e7e8e3" />

        <Button
            android:text="Update info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:layout_weight="1"
            android:background="#e14938"
            android:layout_marginLeft="5dp"
            android:textColor="#e7e8e3"
            android:onClick="UpdateInfo"/>
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>
