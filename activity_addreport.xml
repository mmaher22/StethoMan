<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_addreport"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.youhanamikhaiel.stethoman.addreport"
    android:background="#3a82cf">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="AddReport"
            android:layout_width="match_parent"
            android:id="@+id/textView11"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textColor="#e7e8e3"
            android:layout_marginBottom="40dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/title"
            android:background="#e7e8e3"
            android:paddingTop="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:paddingBottom="7dp"
            android:hint="Title"
            android:paddingLeft="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:ems="10"
            android:id="@+id/Specialization"
            android:background="#e7e8e3"
            android:paddingTop="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:paddingBottom="7dp"
            android:hint="Specialization"
            android:paddingLeft="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText77"
            android:background="#e7e8e3"
            android:layout_weight="1"
            android:hint="Type the information to be added to the report"
            android:gravity="top|center_vertical"
            android:paddingTop="10dp"
            android:paddingLeft="5dp" />
        <Button
            android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button44"
            android:background="#e14938"
            android:layout_marginTop="17dp"
            android:textColor="#e7e8e3"
            android:onClick="report"/>


    </LinearLayout>
</RelativeLayout>
